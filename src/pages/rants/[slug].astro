---
import BaseLayout from '../../layouts/BaseLayout.astro';
import SEO from '../../components/SEO.astro';
import ScrollToTop from '../../components/ScrollToTop.astro';
import BackLink from '../../components/BackLink.astro';
import { getCollection, render } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = async () => {
  const rants = await getCollection('rants');
  return rants.map((rant) => ({
    params: { slug: rant.id },
    props: { rant },
  }));
};

type RantEntry = Awaited<ReturnType<typeof getCollection<'rants'>>>[number];
interface Props {
  rant: RantEntry;
}

const { rant } = Astro.props;
const { Content } = await render(rant);
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
}).format(rant.data.date);
---

<BaseLayout>
  <SEO 
    slot="head"
    title={`${rant.data.title} - Rant Record`}
    description={rant.data.context}
    type="article"
  />

  <main class="rant-page">
    <article class="rant-content">
      <header class="rant-header">
        <time class="rant-date" datetime={rant.data.date.toISOString()}>
          {formattedDate}
        </time>
        
        <h1 class="rant-title">{rant.data.title}</h1>
        
        {rant.data.tags && rant.data.tags.length > 0 && (
          <div class="rant-tags">
            {rant.data.tags.map((tag) => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        )}
      </header>

      <section class="rant-section">
        <h2 class="section-label">Context</h2>
        <p class="section-content">{rant.data.context}</p>
      </section>

      <section class="rant-section">
        <h2 class="section-label">Reasoning</h2>
        <p class="section-content">{rant.data.reasoning}</p>
      </section>

      {rant.body && rant.body.trim().length > 0 && (
        <section class="rant-body prose">
          <Content />
        </section>
      )}

      <BackLink href="/rants" text="All rants" />
    </article>
  </main>

  <ScrollToTop />

  <style>
    .rants-page {
      max-width: 800px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    .rants-content {
      display: flex;
      flex-direction: column;
      gap: 2rem;
    }

    .rants-header {
      padding-bottom: 2rem;
    }

    .rants-date {
      display: block;
      font-size: 0.875rem;
      color: var(--color-text-muted);
      margin-bottom: 0.75rem;
    }

    .rants-title {
      font-size: 2rem;
      font-weight: 700;
      line-height: 1.3;
      letter-spacing: -0.02em;
      margin-bottom: 1rem;
    }

    .rants-tags {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
    }

    .tag {
      font-size: 0.75rem;
      padding: 0.25rem 0.75rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 4px;
      color: var(--color-text-secondary);
    }

    .rants-section {
      padding-bottom: 1.5rem;
    }

    .section-label {
      font-size: 0.75rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.08em;
      color: var(--color-text-muted);
      margin-bottom: 0.75rem;
    }

    .section-content {
      font-size: 1.0625rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
    }

    .section-content.highlight {
      color: var(--color-text);
      font-weight: 500;
      padding: 1rem 1.25rem;
      background: var(--color-bg-secondary);
      border-left: 3px solid var(--color-accent);
      border-radius: 0 6px 6px 0;
    }

    .alternatives-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .alternative-item {
      padding: 1.25rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 8px;
    }

    .alternative-option {
      font-size: 1rem;
      font-weight: 600;
      color: var(--color-text);
      margin-bottom: 1rem;
    }

    .alternative-details {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
    }

    .pros-cons {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    .detail-label {
      font-size: 0.6875rem;
      font-weight: 600;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .pros-label {
      color: #22c55e;
    }

    .cons-label {
      color: #ef4444;
    }

    .detail-list {
      list-style: none;
      padding: 0;
      margin: 0;
      font-size: 0.875rem;
      line-height: 1.6;
      color: var(--color-text-secondary);
    }

    .detail-list li {
      position: relative;
      padding-left: 1rem;
      margin-bottom: 0.375rem;
    }

    .detail-list li::before {
      content: "â€¢";
      position: absolute;
      left: 0;
      color: var(--color-text-muted);
    }

    .rants-body {
      padding-top: 1rem;
    }

    .rants-body.prose :global(h2) {
      font-size: 1.25rem;
      font-weight: 600;
      margin-top: 2rem;
      margin-bottom: 1rem;
      color: var(--color-text);
    }

    .rants-body.prose :global(h2:first-child) {
      margin-top: 0;
    }

    .rants-body.prose :global(p) {
      font-size: 1.0625rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
      margin-bottom: 1.25rem;
    }

    .rants-body.prose :global(ul),
    .rants-body.prose :global(ol) {
      font-size: 1.0625rem;
      line-height: 1.7;
      color: var(--color-text-secondary);
      margin-bottom: 1.25rem;
      padding-left: 1.5rem;
    }

    .rants-body.prose :global(li) {
      margin-bottom: 0.5rem;
    }

    .rants-body.prose :global(strong) {
      color: var(--color-text);
      font-weight: 600;
    }

    .rants-body.prose :global(code) {
      font-size: 0.9em;
      padding: 0.2em 0.4em;
      background: var(--color-bg-secondary);
      border-radius: 4px;
    }

    .rants-body.prose :global(pre) {
      padding: 1.25rem;
      background: var(--color-bg-secondary);
      border: 1px solid var(--color-border);
      border-radius: 8px;
      overflow-x: auto;
      margin-bottom: 1.5rem;
    }

    .rants-body.prose :global(pre code) {
      padding: 0;
      background: none;
    }

    @media (max-width: 768px) {
      .rants-page {
        padding: 1.5rem 1rem;
      }

      .rants-title {
        font-size: 1.5rem;
      }

      .alternative-details {
        grid-template-columns: 1fr;
      }

      .section-content {
        font-size: 1rem;
      }
    }
  </style>
</BaseLayout>
